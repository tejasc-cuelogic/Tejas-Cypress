/*******************************
		 Theme Overrides
*******************************/

/* Dropdown Carets */
@font-face {
  font-family: 'Dropdown';
  src:
    url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype'),
    url(data:application/font-woff;charset=utf-8;base64,) format('woff')
  ;
  font-weight: normal;
  font-style: normal;
}

.ui.dropdown > .dropdown.icon {
  font-family: 'Dropdown';
  line-height: 1;
  height: 1em;
  width: 1.23em;
  backface-visibility: hidden;
  font-weight: normal;
  font-style: normal;
  text-align: center;
}

.ui.dropdown > .dropdown.icon {
  width: auto;
}
.ui.dropdown > .dropdown.icon:before {
  content: '\f0d7';
}

/* Sub Menu */
.ui.dropdown .menu .item .dropdown.icon:before {
  content: '\f0da'/*rtl:'\f0d9'*/;
}

.ui.dropdown .item .left.dropdown.icon:before,
.ui.dropdown .left.menu .item .dropdown.icon:before {
  content: "\f0d9"/*rtl:"\f0da"*/;
}

/* Vertical Menu Dropdown */
.ui.vertical.menu .dropdown.item > .dropdown.icon:before {
  content: "\f0da"/*rtl:"\f0d9"*/;
}

/* Icons for Reference
.dropdown.down.icon {
  content: "\f0d7";
}
.dropdown.up.icon {
  content: "\f0d8";
}
.dropdown.left.icon {
  content: "\f0d9";
}
.dropdown.icon.icon {
  content: "\f0da";
}
*/

//    Custom for NS V.2
.ui.selection.dropdown{
    min-width: auto;
	border-bottom:@border-color 1px solid;
	.menu{
		border:none;
		padding:0 @menuGutterWidth;
		margin:@2px -@menuGutterWidth 0;
	}
	>.dropdown.icon{
		color:@primary-one;
	}
	~ .dropdown-effect{
		position:absolute;
		top:-8px;
		left:0;
		right:0;
		z-index:1;
		border-radius:@borderRadius;
		color:@fullBlack;
		padding:0;
		height:0;
		font-size:0;
		font-weight:@fontMedium;
    }
    &.upward ~ .dropdown-effect{
        top:auto;
        bottom:-10px;
    }
	&.active{
		.menu > .item{
			border:none;
			background:transparent;
		}
		~ .dropdown-effect{
			height:~"calc(100% + 18px)";
			padding:@8px @14px;
			font-size:@13px;
			line-height:18px;
			background-color:@white;
			box-shadow:0 0 10px @veryStrongTransparentBlack;
		}
	}
    &.secondary {
        border: @neutral-offdark 1px solid;
        background: @white;
        padding: @5px;
        border-radius: @4px;
        border: @neutral-offdark 1px solid !important;
        min-height: auto;
        line-height: 16px;
        .icon {
            padding: @6px @5px;
        }
        &.active {
            // border-bottom: 0 !important;
            .menu {
                box-shadow: 0 2px 3px 0 rgba(34,36,38,.15);
                border: 1px solid rgba(34,36,38,.15);
                margin: 0px -@1px;
                padding: 0 @5px;
                min-width: ~"calc(100% + 2px)";
                width: ~"calc(100% + 2px)";
                .item {
                    font-size: @13px;
                }
            }
        }
    }
    &.display-only{
        min-height:auto;
        padding:0 !important;
        border:none !important;
        font-weight:@fontMedium;
        text-overflow:ellipsis;
        line-height:@17px;
        cursor:default;
        background:none !important;
        pointer-events:none;
        >.text{
            display:initial;
        }
        >.icon{
            display:none;
        }
    }
    > .text{
        width:100%;
    }
    &.compact{
        min-height:auto;
        padding-top:@3px;
        padding-bottom:@3px;
        >.dropdown.icon, >.search.icon, >.delete.icon{
            padding-top:@4px;
            padding-bottom:@4px;
        }
    }
}
dl.dl-horizontal dd .ui.selection.dropdown.display-only{
    font-weight:@normal;
}
.ui.dropdown{
    >.text{
        min-height:14px;
        overflow:hidden;
        white-space:nowrap;
        text-overflow:ellipsis;
    }
    &.selection > .text{
        display:block;
    }
    &.inverted>.text{
        color:@white;
    }
    &:not(.button) > .default.text{
        opacity:0.5;
    }
}
.ui.vertical.menu .ui.dropdown.item > .text{
    max-width:~"calc(100% - 20px)";
}
.notification-box{
	.ui.dropdown .icon.dropdown{
		margin:0 5px 0 0;
		&:before{
			content:"\00B7\00B7\00B7";
			font-size:@27px;
			letter-spacing:-3px;
			line-height:@10px;
			color:@neutral-middark;
		}
	}
}