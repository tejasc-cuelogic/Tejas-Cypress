//  Private pages menus
.ui.menu{
    &.pagination.text{
        margin:0;
        padding:@10px @5px;
        border-radius:@4px;
        background-color:@white;
        box-shadow:0 0px 10px rgba(0,0,0,.1);
        .item{
            min-width:2em;
            font-weight:@fontMedium;
            color:@neutral-offdark;
            >.ui.input input{
                margin:0;
                width:40px;
                height:24px;
                padding:0 5px;
                border:@neutral-offdark 1px solid;
                border-radius:4px;
                text-align:center;
            }
        }
    }
    &.secondary.vertical{
        width:auto;
        .item{
            padding:@13px @16px;
        }
    }
    a.header.item{
        &:hover, &:active{
            background-color:transparent;
        }
    }
    //Public Mobile View Start
	&.mobile-dropdown-menu:not(.vertical){
        margin:0;
        position: relative;
        background: fade(@neutral, 90%);
        >.item {
            justify-content: center;
            width: 100%;
            color: @primary-one;
            >i.dropdown.icon:before {
                content: '\e914';
                font-family: 'nextseed';
            }
            &:hover, .active:hover {
                background: fade(@neutral, 90%);
            }
        }
        .icon.open-campaign-menu {
            position: absolute;
            font-size: @24px;
            line-height: 24px;
            top: 8px;
            left: 18px;
            color: @white;
        }
        &.term-notes-menu {
            background: @white;
            >.item {
                justify-content: space-between;
                color: @neutral;
                border: 1px solid @neutral-darkwhite;
                border-radius: 4px;
                &:hover, .active:hover {
                    background: @white;
                }
                &:before {
                    display: none;
                }
            }
        }
	}
	//Public Mobile View End
}
.transaction-detials{
    .ui.inverted.menu .item{
        padding:@16px @25px;
        &:before{
            background-color:@tertiary-text;
        }
        &:hover, &:focus, &.active{
            background-color:@white;
            color:@link-color !important;
        }
    }
}

.ui.menu{
    &.attached:not(.tabular){
        border:none;
    }
    &[class*="bottom attached"]{
        margin-bottom:0;
    }
    &.secondary-menu{
        margin:0;
        background-color:@neutral-darkwhite;
        a.item{
            padding:@16px @20px;
            &:before{
                background-color:@neutral-darkwhite;
            }
            &:hover, &.active{
                background-color:@neutral-offwhite;
            }
            >.icon{
                color:@neutral-darkwhite;
            }
            &.done >.icon{
                color:@primary-one;
            }
        }
    }
}

.business-application{
    .ui.inverted.menu .item{
        &:hover, &:active, &:focus, &.active{
            background-color:@white;
        }
    }
}


//Public Responsive Menu Start
.public-mobile-nav {
    position: relative;
    padding: @30px 0 @58px;
    height: 100%;
    overflow: hidden;
    .mobile-nav-inner-container {
        height: 100%;
        padding-top: @25px;
        overflow: auto;
        position: relative;
    }
}
.ui.sidebar.menu.public-sidebar {
    overflow: hidden !important;
    .ui.divider {
        margin-left: @24px;
        margin-right: @24px;
    }
    &.overlay .ui.image.logo {
        margin-left: @24px;
        margin-bottom: @20px;
    }
    .social-media {
        position: absolute;
        text-align: center;
        left: 0;
        right: 0;
        bottom: 0;
        background: @neutral;
        height: 58px;
        padding: @18px 0;
        .item {
            margin-bottom: 0;
            padding: 0 @8px !important;
            display: inline-block;
            i.icon {
                margin: 0;
            }
        }
    }
    &.visible.vertical .item {
        border-radius: 0 !important;
        padding: @8px @24px;
        span {
            margin-left: 0;
            max-width: 100%;
        }
        &.dropdown {
            .icon.dropdown {
                color: @white;
            }
            .menu.transition {
                margin: @8px 0 0; 
                .item {
                    padding: @8px @14px !important;
                }
            }
        }
    }
    &.left.inverted {
        .public-header-nav .item {
            text-transform: uppercase;
            &.active, &:focus, &:hover{
                background-color: @primary-one !important;
                color: @white !important;
            }
            &.dropdown .menu.transition .item {
                &.active, &:hover, &:focus {
                    background-color: @primary-one-darken!important;
                    color: @white !important;
                }
            }
        }
        .public-footer-nav .item.dropdown {
            &.active, &:focus, &:hover{
                background-color: @neutral-middark !important;
                color: @white !important;
            }
        }
    }
}
//Public Responsive Menu End