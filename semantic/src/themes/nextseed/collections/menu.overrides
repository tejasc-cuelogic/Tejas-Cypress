    }
    &.secondary-menu{
        margin:0;
        background-color:@neutral-darkwhite;
        a.item{
            padding:@16px @20px;
            &:before{
                background-color:@neutral-darkwhite;
            }
            &:hover, &.active{
                background-color:@neutral-offwhite;
            }
            >.icon{
                color:@neutral-darkwhite;
            }
            &.done >.icon{
                color:@primary-one;
            }
        }
    }
}

.business-application{
    .ui.inverted.menu .item{
        &:hover, &:active, &:focus, &.active{
            background-color:@white;
        }
    }
    .ui.secondary-menu.menu .right.item:before {
        background-color: transparent;
    }
}


//Public Responsive Menu Start
.public-mobile-nav {
    position: relative;
    padding: @58px 0 0;
    height: 100%;
    overflow: hidden;
    .mobile-nav-inner-container {
        height: 100%;
        overflow: auto;
        position: relative;
    }
}
.ui.sidebar.menu.public-sidebar {
    overflow: hidden !important;
    .ui.divider {
        margin-left: @24px;
        margin-right: @24px;
    }
    &.overlay .ui.image.logo {
        margin-left: @24px;
        margin-bottom: @20px;
    }
    .social-media {
        text-align: center;
        background: @neutral;
        padding: 0 0 @14px;
        .item {
            margin-bottom: 0;
            padding: 0 @8px !important;
            display: inline-block;
            i.icon {
                margin: 0;
            }
        }
    }
    &.visible.vertical .item {
        border-radius: 0 !important;
        padding: @8px @24px;
        span {
            margin-left: 0;
            max-width: 100%;
        }
        &.dropdown {
            .icon.dropdown {
                color: @white;
            }
            .menu.transition {
                margin: @8px 0 0; 
                .item {
                    padding: @8px @14px !important;
                }
            }
        }
    }
    &.left.inverted {
        .item {
            text-transform: uppercase;
            &:hover,&:focus,&.active{
                background-color: @primary-one !important;
                color: @white !important;
            }
            &.active.no-active,{
                background-color: transparent !important;
                color: @white !important;
            }
            &.dropdown {
                &.active,&:focus,&:hover {
                    background-color: transparent !important;
                    color: @white !important;
                }
                &.really{
                    background-color: @primary-one !important;
                    color: @white !important;
                }
                .menu.transition .item {
                    &.active, &:hover, &:focus {
                        background-color: @primary-one-darken!important;
                        color: @white !important;
                    }
                }
                &.disabled {
                    pointer-events: auto;
                    opacity: 1;
                    color: @white !important;
                }
                &.really{
                    background-color: @primary-one !important;
                    color: @white !important;
                }
                .menu.transition .item {
                    &.active, &:hover, &:focus {
                        background-color: @primary-one-darken!important;
                        color: @white !important;
                    }
                }
            }
        }
        .public-footer-nav .item{
            text-transform: none;
            span {
                color: @white;
            }
        }
    }
}
//Public Responsive Menu End