.content-wrapper{
	min-height:~"calc(100vh - 58px)";
}
.ui.segment.vertical{
    &.content{
        padding:50px 0;
		min-height:~"calc(100vh - 344px)";
		&.banner-img{
			background:url('@{imagePath}/banner_raise.jpg') center center no-repeat;
			background-size:cover;
		}
	}
}
.content-spacer{
	position:relative;
	padding:@30px @40px;
	@media only screen and (max-width : (@largeMonitorBreakpoint - 1px)){
		padding:@20px;
	}
	@media only screen and (max-width : (@tabletBreakpoint - 1px)){
		padding:@20px @10px;
	}
}
.secondary-section{
	background-color:@inverse-darken;
}
.overlay{
	position:absolute;
	top:0;
	right:0;
	bottom:0;
	left:0;
	background-color:fade(@primary-text, 30%);
	transform:scale(0);
	&.editing{
		transform:scale(1);
		z-index:1;
	}
}
.webcontent-spacer{
	// padding:@40px @70px @14px;
	padding:@20px @40px;
	@media only screen and (max-width : (@largeMonitorBreakpoint - 1px)){
		padding:@20px;
	}
	@media only screen and (max-width : (@tabletBreakpoint - 1px)){
		padding:@20px @10px;
	}
}

div.login-form {
	height: 100%;
	.column{
		max-width:380px;
	}
	h1.header{
		margin-bottom:@20px;
		>span{
			font-size:@18px;
			color:@tertiary-text;
		}
	}
	.note{
		text-align:center;
		color:@tertiary-text;
	}
	ul.error-messages{
		list-style-type:none;
		padding:0;
		text-align:left;
	}
}

// Helper classes
.pull-left{
	float:left !important;
}
.pull-right{
	float:right !important;
}
.left-align{
	text-align:left !important;
}
.right-align{
	text-align:right !important;
}
.center-align{
	text-align:center !important;
	justify-content:center;
}
.inverse-text{
	color:@inverse-text !important;
}
.positive-text{
	color:@theme-primary !important;
}
.negative-text{
	color:@highlight-primary !important;
}

