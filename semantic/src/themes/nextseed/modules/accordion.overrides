//	Knowledge Base UI
.ui.accordion.feed-view{
	.title{
		padding:@12px 0;
		font-weight:400;
		color:@neutral-middark;
		border-top:@border-light 1px solid;
		&:first-of-type{
			border:none;
		}
		>span{
			display:block;
			color:@fullBlack;
		}
		&.active > span{
			color:@link-color;
		}
	}
}


//education-center
.edu-center {
	.ui.accordion {
		.active.content {
			background: @neutral-offwhite;
		}
	}
	.ui.accordion:not(.styled).splitted  {
		.title {
			box-shadow: none;
			font-weight: normal;
			color: @neutral-middark;
			background: @neutral-offwhite;
			font-size: @14px;
			&.active {
				border-radius: 0;
				background: @secondary-color;
				color: @white;
				&::before{
					display: none;
				}
				.ns-chevron-down.icon {
					color: @white;
				}
			}
			&:first-of-type {
				border-radius: 0;
			}
			>.icon {
				color: @neutral-middark;
			}
			~.content:not(.ui).active+.title {
				box-shadow: none;
				border-top: #e0e0e0 1px solid;
				border-radius: 0;
			}
		}
		a.title {
			display: block;
			text-decoration: none;
		}
		.list a.item {
			border-top: 0;
			color: @neutral-middark;
			background: @neutral-offwhite;
			&.active {
				color: @primary-one;
				font-weight: @bold;
			}
		}
		//Business compare section mobile start
		&.compare-section {
			.title {
				font-weight: @bold;
				border: 0 !important;
			}
			.content {
				padding: 0;
				margin-bottom: @25px;
			}
			.title .ns-chevron-down.icon {
				right: 20px;
			}
			.ui.table tr {
				th {
					border:0;
				}
				td {
					font-size: @13px;
					color: @neutral-middark;
					&:first-child {
						font-weight: bold;
						color: @neutral;
					}
				}
			}
		}
	}
}
