/*******************************
         Theme Overrides
*******************************/
.tabular-wrap{
    .ui.statistic{
        position:relative;
        padding-left:1em;
        &:before{
            content:"";
            width:3px;
            height:100%;
            background:@theme-primary;
            background:@statGradient;
            position:absolute;
            left:0;
        }
        i.icon{
            margin-left:@20px;
        }
    }
}