//	Page Header Styles
.page-header-section{
	// min-height:132px;
	background-color:@secondary-text;
	position:relative;
	padding:@20px @40px;
	@media only screen and (max-width : (@largeMonitorBreakpoint - 1px)){
		min-height:auto;
		padding:@20px;
	}
	@media only screen and (max-width : (@tabletBreakpoint - 1px)){
		padding:@20px @10px;
	}
	h1{
		// @include fontBold;
		font-size:@30px;
		line-height:@42px;
		color:@inverse-text;
		// font-weight: bold;
		a.back-link{
			position:absolute;
			left:-15px;
			top:-4px;
			color:@theme-primary;
			> i.icon, i.icons{
				font-size:@14px;
			}
			&:hover, &:active, &:focus{
				color:darken(@theme-primary, 8%);
			}
		}
	}
	p{
		// font-family:@regularFont;
		color:@inverse-text;
	}
	span.filter-count{
		height:19px;
		min-width:19px;
		padding:0 4px;
		margin-right:1rem;
		background:@theme-primary;
		display:inline-block;
		font-size:@11px;
		line-height:@19px;
		font-weight:700;
		color:@secondary-text;
		text-align:center;
		border-radius:3px;
	}
	.ui.button.link-button{
		padding:@11px 0;
	}
	.actions{
		font-size:@20px;
		margin-left:@20px;
		display:inline-block;
		vertical-align:top;
	}
	.item.notification{
		position:relative;
		display:block;
		float:right;
		height:42px;
		padding:10px 0;
		margin-left:@30px;
		cursor:pointer;
		.icon{
			font-size:@22px;
			color:@tertiary-text;
			color:@white;
			height:auto;
			line-height:1;
		}
		span.unread-count{
			height:18px;
			min-width:18px;
			padding:0 5px;
			border-radius:10px;
			font-size:@12px;
			// font-weight:500;
			color:@inverse-text;
			line-height:@18px;
			display:block;
			text-align:center;
			background:@highlight-primary;
			position:absolute;
			right:-6px;
			bottom:6px;
		}
	}
}
.search-filters{
	background-color:@tertiary-text;
	padding:@14px @40px;
	@media only screen and (max-width : (@largeMonitorBreakpoint - 1px)){
		padding:@7px @20px @14px;
	}
	@media only screen and (max-width : (@tabletBreakpoint - 1px)){
