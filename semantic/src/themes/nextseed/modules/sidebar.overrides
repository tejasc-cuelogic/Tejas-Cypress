/*******************************
         Theme Overrides
*******************************/

// 	Sidebar pushable CSS
.pushable>.sidebar{
	&.push ~ .pusher{
		padding-left:64px;
	}
	~ .pusher{
		transition:all .5s ease;
		height:~"calc(100vh - 58px)";
		overflow-y:auto;
		background-color:@lighten-bg-color;
		.ui.vertical.segment.content{
			padding:0;
			min-height:~"calc(100vh - 58px)";
		}
		// @media only screen and (max-width : (@largeMonitorBreakpoint - 1px)){
		// 	background-color:#f4a460;
		// }
		// @media only screen and (max-width : (@tabletBreakpoint - 1px)){
		// 	background-color:#87ceeb;
		// }
	}
}
.ui.sidebar{
	.user-picture{
		margin:@16px 0;
		padding:@14px 0;
		text-align:center;
		color:@inverse-text;
		border-radius:@4px;
		> img, h2, h3{
			transition:all .5s ease;
			white-space:nowrap;
			overflow:hidden;
		}
	}
	&.visible .user-picture{
		&:hover{
			background-color:@secondary-text;
		}
		> img{
			max-width:90px;
			margin:0 auto 10px;
		}
		h2{
			font-size:16px;
			font-weight:900;
			margin:0 0 5px;
		}
		h3{
			margin:@10px 0 0;
			font-size:14px;
			font-weight:700;
			color:@border-color;
		}
	}
	~ .ui.button.collapseIcon{
		width:220px;
		margin:0;
		border-radius:0;
		background-color:@tertiary-text;
		color:@quaternary-text;
		text-align:left;
		position:absolute;
		left:0;
		bottom:0;
		z-index:999;
		transition:width .5s ease;
		// &:before{
		// 	display:none;
		// }
		.icon{
			float:left;
			margin:0 !important;
			font-size:@18px;
		}
		span{
			margin-left:@30px;
			display:block;
			overflow:hidden;
		}
	}
	&:not(.visible){
		.user-picture{
			margin:@24px 0 @7px;
			> img{
				max-width:30px;
				margin:0 auto;
			}
			h2, h3{
				font-size:0;
				line-height:0;
				margin:0;
			}
		}
		&.left.push .item{
			overflow:visible;
			margin-bottom:@6px;
			>.label{
				margin:0;
				position:absolute;
				top:-5px;
				right:-5px;
			}
		}
		~ .ui.button.collapseIcon{
			width:64px;
			span{
				display:none;
			}
		}
	}
}
.ui.inverted.menu{
	a.item:hover, a.item.active, a.item.active:hover{
		background-color:@secondary-text;
	}
}
.ui.sidebar{
	.ui.image.logo{
		height:38px;
		max-height:38px;
	}
	&.left.visible.thin{
		~.fixed, ~.pusher{
			padding-left:220px;
			transform:translate3D(0,0,0);
		}
	}
	&.left.push{
		width:64px;
