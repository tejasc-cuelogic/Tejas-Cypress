/*******************************
         Tab Overrides
*******************************/
.tabular-wrap{
    min-height:~"calc(100vh - 205px)";
    .ui.vertical.tabular.menu{
        height:100%;
        min-height:~"calc(100vh - 205px)";
        border:none;
        background:@inverse-text;
        .item{
            font-family:@boldFont;
            padding:@18px @20px;
            border-radius:0 !important;
            border-left:none;
            border-top:none;
            border-bottom:@border-color 1px solid;
            .account-type{
                margin-right:@18px;
            }
            &.active{
                background:@lighten-bg-color;
            }
        }
    }
    .horizontal-spacer{
        padding:0 @30px;
        position:relative;
    }
    .ui.segment{
        background:transparent;
        padding:@30px 0;
        &.attached.tab{
            width:100%;
            max-width:none;
            margin:0;
            border:none;
        }
        h2{
            margin-bottom:2rem;
            .account-type{
                margin-right:1rem;
            }
        }
        .main.actions{
            position:absolute;
            right:@30px;
            top:0;
            font-family:@boldFont;
            text-transform:uppercase;
            > a{
                color:@highlight-primary;
                i.icon{
                    vertical-align:bottom;
                }
                &:hover, &:focus, &:active{
                    color:darken(@highlight-primary, 15%);
                }
            }
        }
    }
}

.account-type-tab{
    > .ui.item.menu.secondary{
        margin: 0 -1rem 1rem !important;
        width: auto !important;
        a.item{
            margin-top:1rem;
            padding:0 1em !important;
            .account-tab{
                width:100%;
                padding:1rem;
                font-family:@boldFont;
                font-size:@16px;
                border:@borderColor 1px solid;
                border-radius:@defaultBorderRadius * 1.5;
                .account-type{
                    margin-right:@8px;
                }
            }
            &.active{
                .account-tab{
                    border-color:@theme-primary;
                    .account-type{
                        color:@theme-primary;
                        border-color:@theme-primary;
                    }
                }
            }
        }
    }
    .tab{
        font-family:@regularFont;
        font-size:@16px;
    }
}
