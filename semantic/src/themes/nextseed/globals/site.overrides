/*******************************
        Global Overrides
*******************************/
.content-wrapper{
	min-height:~"calc(100vh - 58px)";
}
.ui.segment.vertical{
    &.content{
        padding:50px 0;
		min-height:~"calc(100vh - 344px)";
		&.banner-img{
			background:url('@{imagePath}/banner_raise.jpg') center center no-repeat;
			background-size:cover;
		}
	}
}
.content-spacer{
	position:relative;
	padding:@30px @40px;
	@media only screen and (max-width : @largestSmallMonitor){
		padding:@20px;
	}
	@media only screen and (max-width : @largestMobileScreen){
		padding:@20px @10px;
	}
}
.business-application .content-spacer{
	padding:@50px 0px;
}
.inner-content-spacer{
	padding:@20px;
}
.secondary-section{
	background-color:@inverse-darken;
}
.overlay{
	position:absolute;
	top:0;
	right:0;
	bottom:0;
	left:0;
	background-color:fade(@primary-text, 30%);
	transform:scale(0);
	&.editing{
		transform:scale(1);
		z-index:1;
	}
}
.webcontent-spacer{
	padding:@20px @40px;
	@media only screen and (max-width : @largestSmallMonitor){
		padding:@20px;
	}
	@media only screen and (max-width : @largestMobileScreen){
		padding:@20px @10px;
	}
}

div.login-form {
	height: 100%;
	.column{
		max-width:380px;
	}
	h1.header{
		margin-bottom:@20px;
		>span{
			font-size:@18px;
			color:@tertiary-text;
		}
	}
	.note{
		text-align:center;
		color:@tertiary-text;
	}
	ul.error-messages{
		list-style-type:none;
		padding:0;
		text-align:left;
	}
}

//	Heading font sizes
h6{
	font-size:@13px;
}

// Helper classes
.mb-half{
	margin-bottom:@7px !important;
}
.mt-30{
	margin-top:@30px !important;
}
.pull-left{
	float:left !important;
}
.pull-right{
	float:right !important;
}
.left-align{
	text-align:left !important;
}
.right-align{
	text-align:right !important;
}
.center-align{
	text-align:center !important;
	justify-content:center;
}
.inverse-text{
	color:@inverse-text !important;
}
.positive-text{
	color:@theme-primary !important;
}
.negative-text{
	color:@highlight-primary !important;
}
.intro-text{
	color:@quaternary-text;
	margin-bottom:@28px;
}
a.link{
	color:@link-color;
	&:hover{
		color:darken(@link-color, 10%);
	}
}

a.text-link{
	color:@tertiary-text;
	&:hover, &:active, &.active{
		color:@primary-text;
	}
}

//	Admin Page Content Styles

//	Page Header Styles
.page-header-section{
	background-color:@secondary-text;
	position:relative;
	padding:@20px @40px;
	@media only screen and (max-width : @largestSmallMonitor){
		min-height:auto;
		padding:@20px @60px;
	}
	@media only screen and (max-width : @largestMobileScreen){
		~ .secondary-menu{
			padding:0 @20px @14px;
		}
	}
	h1.ui.header{
		font-size:@30px;
		line-height:@42px;
		color:@inverse-text;
		position:relative;
		@media only screen and (max-width : @largestSmallMonitor){
			font-size:@16px;
			line-height:@22px;
			text-align:center;
			padding-right:@30px;
		}
		a.back-link{
			position:absolute;
			left:-30px;
			top:0;
			color:@theme-primary;
			> i.icon, i.icons{
				font-size:@14px;
				line-height:1;
				vertical-align:middle;
			}
			&:hover, &:active, &:focus{
				color:darken(@theme-primary, 8%);
			}
		}
	}
	p{
		color:@inverse-text;
	}
	span.filter-count{
		height:19px;
		min-width:19px;
		padding:0 4px;
		margin-right:1rem;
		background:@theme-primary;
		display:inline-block;
		font-size:@11px;
		line-height:@19px;
		font-weight:700;
		color:@secondary-text;
		text-align:center;
		border-radius:3px;
	}
	.ui.button.link-button{
		padding:@11px 0;
	}
	.actions{
		font-size:@20px;
		margin-left:@20px;
		display:inline-block;
		vertical-align:top;
	}
	.item.notification{
		position:relative;
		display:block;
		float:right;
		height:42px;
		margin-left:@30px;
		cursor:pointer;
		@media only screen and (max-width : @largestSmallMonitor){
			height:22px;
			margin-left:0;
			position:absolute;
			top:50%;
			right:-30px;
			transform:translate(0, -50%);
		}
		@media only screen and (max-width : @largestMobileScreen){
			right:-40px;
		}
		.icon{
			font-size:@22px;
			color:@tertiary-text;
			color:@white;
			height:auto;
			line-height:@42px;
			@media only screen and (max-width : @largestSmallMonitor){
				font-size:@16px;
				line-height:@22px;
			}
		}
		span.unread-count{
			height:18px;
			min-width:18px;
			padding:0 5px;
			border-radius:10px;
			font-size:@12px;
			color:@inverse-text;
			line-height:@18px;
			display:block;
			text-align:center;
			background:@highlight-primary;
			position:absolute;
			right:-6px;
			bottom:6px;
			@media only screen and (max-width : @largestSmallMonitor){
				height:14px;
				min-width:14px;
				padding:0 3px;
				font-size:@10px;
				line-height:@14px;
				bottom:0px;
				right:-2px;
			}
		}
	}
}
.search-filters{
	background-color:@tertiary-text;
	padding:@14px @40px;
	@media only screen and (max-width : @largestSmallMonitor){
		padding:@7px @20px @14px;
	}
	@media only screen and (max-width : @largestMobileScreen){
		padding:@7px @10px @14px;
	}
}
.filter-meta{
	background-color:@secondary-text;
	padding:@14px @40px;
}
.secondary-menu{
	background-color:@tertiary-text;
	padding:0 @40px;
	@media only screen and (max-width : @largestLargeMonitor){
		padding:0 @20px;
	}
	@media only screen and (max-width : @largestMobileScreen){
		padding:@14px @20px;
		background-color:@secondary-text;
		.ui.selection.dropdown{
			padding:@11px;
			padding-right:@30px;
			background-color:@tertiary-text;
			border:none;
			border-radius:@6px;
			color:@white;
			z-index:9;
			.dropdown.icon{
				padding-right:@12px;
			}
			.menu{
				border:none;
				padding:0;
				background-color:@tertiary-text;
				.item{
					padding:@11px !important;
					border:none;
					color:@quaternary-text;
					&.selected{
						color:@white;
						font-weight:400;
					}
				}
			}
			&.active .menu{
				margin:1px 0 0;
				width:100%;
				min-width:100%;
			}
			&.visible>.text:not(.default){
				color:@white;
			}
		}
	}
}

.top-cta-section{
	// height:104px;
	padding:@20px @40px;
	position:relative;
	// margin-bottom:@50px;
	// background:@tertiary-text;
	@media only screen and (max-width : @largestSmallMonitor){
		padding:@20px;
	}
	@media only screen and (max-width : @largestMobileScreen){
		padding:@20px @10px;
	}
	&:before{
		content:"";
		width:100%;
		height:104px;
		background-color:@tertiary-text;
		position:absolute;
		top:0;
		left:0;
	}
	.sticky-notification{
		position:relative;
		z-index:9;
		@media only screen and (min-width : @largeMonitorBreakpoint){
			width:60%;
		}
		@media only screen and (max-width : @largestTabletScreen){
			width:100%;
		}
	}
}

//	Notification panel
.notification-panel{
	width:330px;
    height:~"calc(100vh - 58px)";
	padding:@20px 0 @7px @20px;
	background:@darken-bg-color;
	color:@inverse-text;
	overflow:auto;
    position:fixed;
    right:-350px;
    top:0;
	z-index:2;
	transition:all 500ms ease-in-out;
	&.slide-in{
		right:0px;
	}
	h3{
		margin-bottom:1rem;
		letter-spacing:1px;
	}
	p.title{
		font-size:@13px;
		color:@inverse-secondary-text;
	}
}
.notification-box{
	padding:@14px;
	margin-bottom:@18px;
	border-radius:5px 0 0 5px;
	background-color:@tertiary-text;
	box-shadow:0 0 20px fade(@fullBlack, 32%);
	.timestamp{
		font-size:@13px;
		color:@inverse-secondary-text;
	}
	h4.amount{
		font-size:@20px;
		font-weight:900;
		color:@theme-primary;
	}
}

//	Web Footer Style
.ui.segment,
.ui.primary.segment{
	&.inverted{
		&.footer{
			padding:@28px;
			background-color:@darken-bg-color;
		}
	}
}
.footer{
	.ui.header{
		font-weight:400;
	}
}

//	Account type symbols
.account-type{
	display:inline-block;
	font-family:@pageFont;
	text-align:center;
	line-height:1.5;
	border-radius:4px;
	border-style:solid;
	border-color:@quaternary-text;
	color:@quaternary-text;
	position:relative;
	+ .account-type{
		margin-left:@6px;
	}
	&.accredited:after{
		content:"A";
		display:block;
		border-radius:10px;
		text-align:center;
		color:@inverse-text;
		position:absolute;
	}
	&.admin{
		color:@fullBlack;
		border-color:@fullBlack;
		&.accredited:after{
			background-color:@fullBlack;
		}
	}
	&.full{
		color:@highlight-tertiary;
		border-color:@highlight-tertiary;
		&.accredited:after{
			background-color:@highlight-tertiary;
		}
	}
	&.partial{
		color:@highlight-secondary;
		border-color:@highlight-secondary;
		&.accredited:after{
			background-color:@highlight-secondary;
		}
	}
	&.locked{
		color:@highlight-primary;
		border-color:@highlight-primary;
		&.accredited:after{
			background-color:@highlight-primary;
		}
	}
	&.small{
		width:24px;
		height:24px;
		font-size:@15px;
		border-width:1px;
		&.accredited:after{
			font-size:@8px;
			width:13px;
			height:13px;
			top:-6px;
			right:-6px;
		}
	}
	&.medium{
		width:36px;
		height:36px;
		font-size:@22px;
		border-width:2px;
		&.accredited:after{
			font-size:@11px;
			width:16px;
			height:16px;
			top:-8px;
			right:-8px;
		}
	}
}

//	Toast message Styles
.toast-message{
	> div{
		min-height:54px;
		padding:0.7em 1em;
		border-radius:@absoluteBorderRadius;
		button{
			font-size:@12px;
			font-weight:400;
		}
		&.success{
			background-color:lighten(@highlight-tertiary, 5%);
		}
		&.error{
			background-color:lighten(@highlight-primary, 5%);
		}
		&.info{
			background-color:lighten(@highlight-quaternary, 5%);
		}
		&.warning{
			background-color:lighten(@highlight-secondary, 5%);
		}
	}
}
.field-error-message{
	background-color:@negativeBackgroundColor;
	border:@negativeBorderColor 1px solid;
	color:@negativeTextColor;
	border-radius:@4px;
	max-height: 100px;
	overflow-y: auto;
	position: fixed;
	padding: @10px;
    display: inline-block;
	left: 50%;
	top: 10px;
	z-index:99;
    transform: translate(-50%,0);
}
a.disabled, a.disabled:hover, a.disabled:focus{
	cursor:default;
	opacity:.45 !important;
	pointer-events:none !important;
}
//	Meta Data
.meta-data{
	font-size:@13px;
	font-weight:400;
	color:@quaternary-text;
	margin-left:@40px;
	> span + span{
		margin-left:@40px;
	}
}
.full-account{
	color:@highlight-tertiary;
}

//	Check List
.check-list{
	.item{
		i.icon{
			color:@border-color;
			&.check.circle{
				color:@theme-primary;
			}
		}
	}
}

// dl dt horizontal
dl.dl-horizontal{
	margin:0;
	&:not(:last-child){
		margin-bottom:@30px;
	}
	dt{
		float:left;
		width:140px;
		font-weight:700;
	}
	dd{
		margin-left:150px;
		margin-bottom:@10px;
		color:@secondary-text;
		overflow:hidden;
		text-overflow:ellipsis;
		&:last-of-type{
			margin-bottom:0;
		}
	}
}

//	Multistep modal navigation
ol.progtrckr{
	margin:0;
	padding:@24px 0 @26px;
	list-style-type:none;
	text-align:center;
	li{
		margin:0 @10px @14px;
		min-width:60px;
		display:inline-block;
		font-size:@13px;
		line-height:2rem;
		text-align:center;
		cursor:pointer;
		position:relative;
		&:after{
			content:"";
			width:60px;
			height:4px;
			border-radius:@4px;
			display:block;
			background:@quaternary-text;
			position:absolute;
			left:50%;
			transform:translate(-50%, 0%);
		}
		&.progtrckr-todo{
			color:@quaternary-text;
			&:after{
				background:@quaternary-text;
			}
		}
		&.progtrckr-doing{
			color:@white;
			&:after{
				background:@white;
			}
		}
		&.progtrckr-done{
			color:@theme-primary;
			&:after{
				background:@theme-primary;
			}
		}
		&.progtrckr-todo, &.progtrckr-doing, &.progtrckr-done{
			&.error{
				color:@highlight-primary;
				&:after{
					background:@highlight-primary;
				}
			}
		}
	}
}

.update-details{
	.ui.embed{
		margin-bottom:@28px;
	}
}
.ui.grid.investment-scale{
	margin-bottom:@40px;
	.invested{
		margin:0 ~"calc(100% / 7 / 2)";
		padding:0 !important;
		width:100%;
		min-height:40px;
		position:relative;
		.investment-progress{
			content:"";
			height:3px;
			background:lighten(@link-color, 20%);
			display:block;
			position:absolute;
			bottom:-41px;
			z-index:1;
		}
		>.amount{
			min-width:calc(100% / 7);
			padding:0 1rem;
			position:absolute;
			left:0;
			z-index:3;
			transform:translate(-50%, 0%);
			font-size:@13px;
			font-weight:700;
			color:@quaternary-text;
			>span{
				font-size:@14px;
				color:@link-color;
				display:block;
			}
			&:after{
				content:"";
				width:13px;
				height:13px;
				border-radius:@8px;
				background-color:@link-color;
				position:absolute;
				left:50%;
				bottom:-55px;
				transform:translate(-50%, -50%);
				border:3px solid white;
				box-shadow:0px 0px 4px 1px @link-color;
			}
		}
	}
	.column{
		position:relative;
		padding-top:@50px;
		font-weight:700;
		color:@border-color;
		&:before{
			content:"";
			height:1px;
			width:100%;
			position:absolute;
			left:50%;
			top:25px;
			background-color:@border-color;
		}
		&:after{
			content:"";
			width:9px;
			height:9px;
			border-radius:@5px;
			background-color:@quaternary-text;
			position:absolute;
			left:50%;
			top:25px;
			z-index:2;
			transform:translate(-50%, -50%);
			border:2px solid white;
			box-shadow:0px 0px 4px 1px @quaternary-text;
		}
		&:last-child:before{
			display:none;
		}
		&.crossed{
			color:@link-color;
			&:after{
				background-color:lighten(@link-color, 20%);
				box-shadow:0px 0px 4px 1px @link-color;
			}
		}
	}
}

// Rechart Styles
svg:not(:root).recharts-surface{
	overflow:visible;
}
.recharts-wrapper{
	.recharts-legend-wrapper{
		z-index:-1;
	}
	.recharts-pie-sector .datavalue{
		font-size:@20px;
		font-weight:700;
	}
	tspan{
		font-size:18px;
		font-weight:700;
	}
	.chartLegends li{
		font-size:22px;
		span{
			font-size:13px;
			color:@fullBlack;
			vertical-align:top;
		}
	}
}

.knowledge-details{
	position:relative;
	.button.circular{
		position:absolute;
		right:0;
		top:50%;
		transform:translate(0%, 0%);
	}
}

.welcome-packet{
	.pdf-viewer{
		height:~"calc(100vh - 184px)";
		width:100%;
		max-width:1000px;
		margin:0 auto;
	}
}

.issuer-signup{
	.icon.massive{
		font-size:80px;
		width:auto;
	}
	.icon.huge{
		font-size:60px;
		width:auto;
	}
	h1.ui.header{
		font-size:@32px;
		.sub.header{
			font-size:@14px;
			> a{
				font-weight:700;
			}
		}
	}
	>.ui.header{
		margin-bottom:@42px;
		.sub.header{
			margin-top:@10px;
		}
	}
	.field-wrap{
		padding:@40px;
		height:100%;
		@media only screen and (max-width:@largestMobileScreen){
			padding:@25px;
		}
	}
