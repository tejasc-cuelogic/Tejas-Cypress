/*******************************
         Theme Overrides
*******************************/
.ui.modal{
    >.close{
        top:0.5rem;
        right:0.5rem;
        opacity:0.5;
        color:@quaternary-text;
    }
    >.header:not(.ui){
        padding-top:3rem;
        .back-link{
            font-size:16px;
            font-weight:400;
            position:absolute;
            top:0.85rem;
            left:0.85rem;
        }
        .ui.header{
            margin:0 0 0.5rem;
        }
        p{
            font-family:@pageFont;
            font-weight:500;
            font-size:1rem;
            color:@dark-bg-color;
        }
    }
    .content{
        padding-top:1.5rem;
        &.login-modal{
            // max-width:404px;
            margin:0 auto;
        }
        &.signup-modal{
            // max-width:548px;
            // margin:0 auto;
            .user-type{
                height:100%;
                padding:1em;
                border-radius:@defaultBorderRadius * 1.5;
                border:darken(@light-bg-color, 9%) 1px solid;
                cursor:pointer;
                h3{
                    margin:0.5rem 0;
                }
                p{
                    font-family:@regularFont;
                    font-size:0.928571em;
                    color:@fullBlack;
                }
                &:hover, &:focus, &.active{
                    border-color:@theme-primary-darken;
                    i.icon{
                        color:@theme-primary-darken;
                    }
                }
            }
        }
        .ui{
            &.button, &.buttons .button{
                letter-spacing:1px;
                &:not(.circular){
                    border-radius:0;
                }
                &.large{
                    font-size:1rem;
                }
                &.circular{
                    min-width:160px;
                }
            }
        }
        a.cancel-link{
            margin:1.5rem 0 0;
            display:inline-block;
            font-family:@regularFont;
            font-size:16px;
            letter-spacing:1px;
            color:@quaternary-text;
        }
    }
    .ui.divider{
        color:@quaternary-text;
        &:before, &:after{
            background:none;
        }
    }
    .ui.form{
        .fields .field{
            margin-bottom:1rem;
        }
        .field{
            margin:0 0 2rem;
            .ui.input input{
                font-family:@boldFont;
                padding-left:0;
                padding-right:0;
                border-radius:0;
                border:none;
                border-bottom:@borderColor 1px solid;
            }
            > label{
                i.icon.help{
                    margin-left:0.5rem;
                }
            }
        }
    }
}

