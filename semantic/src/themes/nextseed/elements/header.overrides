h6.ui.header{
    .sub.header{
        font-size:@relative12px;
        font-weight:@normal;
        line-height:@22px;
        color:@neutral-middark;
    }
}
.ui.top.attached.header {
    padding-left: 0;
    padding-right: 0;
    border: 0;
}

.campaign-details-banner .ui.header .sub.header{
    margin-top:@7px;
}
.signup-header h3.ui.header.greeting {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}