/*******************************
         Theme Overrides
*******************************/
@font-face {
  font-family: 'Accordion';
  src:
    url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype'),
    url(data:application/font-woff;charset=utf-8;base64,) format('woff')
  ;
  font-weight: normal;
  font-style: normal;
}

/* Dropdown Icon */
.ui.accordion .title .dropdown.icon,
.ui.accordion .accordion .title .dropdown.icon {
  font-family: Accordion;
  line-height: 1;
  backface-visibility: hidden;
  font-weight: normal;
  font-style: normal;
  text-align: center;
}

.ui.accordion .title .dropdown.icon:before,
.ui.accordion .accordion .title .dropdown.icon:before {
  content: '\f0da'/*rtl:'\f0d9'*/;
}


/*******************************
		  Custom for NS V.2
*******************************/
/* Accordion Title */
.ui.accordion{
	.title:not(.ui){
		margin:0;
		position:relative;
		padding-right:30px;
		font-weight:@fontMedium;
	}
	&.faq-accordion {
		box-shadow: none;
		.title:not(.ui) {
			color: @neutral;
			font-weight: @fontMedium;
			border-bottom: @border-light 1px solid;
			padding: @14px 0;
			font-size: @20px;
			.ns-chevron-down.icon {
				color:@neutral-middark;
				font-size: @15px;
			}
			~.content:not(.ui) {
				padding-bottom: 0;
			}
		}
		.active.content {
			background: @white !important;
		}
		.accordion {
			border-bottom: @border-light 1px solid;
			margin-top: 0;
			.title:not(.ui) {
				border-bottom: 0;
				font-weight: @normal;
				font-size: @15px;
				&.active {
					font-weight: @bold;
				}
				i.icon{
					margin-right: @14px;
				}
				~.content:not(.ui) {
					padding-bottom: @14px;
				}
			}
		}
	}
	&.faq-acc .title:not(.ui) {
		padding-right: 0;
	}
}

/* Dropdown Icon */
.ui.accordion:not(.styled),
.ui.accordion .accordion:not(.styled){
	.title{
		.ns-chevron-down.icon {
			margin:0;
			height:@21px;
			color:@primary-one;
			line-height:@21px;
			position:absolute;
			right:0;
			top:50%;
			margin-top:-.75rem;
		}
		&.active{
			.ns-chevron-down.icon{
				transform:rotate(180deg);
			}
		}
		.ns-chevron-up.icon{
			height:auto;
			transform:rotate(180deg);
		}
		&.active .ns-chevron-up.icon{
			transform:rotate(0deg);
		}
	}
	//	FAQ UI
	&.splitted{
		.title{
			font-size:@18px;
			color:@fullBlack;
			padding:@14px @40px @14px @20px;
			background-color:@white;
			box-shadow:@noTopShadow;
			border-bottom:@border-light 1px solid;
			position:relative;
			overflow:hidden;
			&:first-of-type{
				box-shadow:@allSideShadow;
				border-radius:@6px @6px 0 0;
			}
			&:nth-last-child(2){
				border-radius:0 0 @6px @6px;
			}
			>.icon{
				font-size:@14px;
				color:@link-color;
				right:10px;
			}
			~ .content:not(.ui){
				padding:@20px @20px @30px;
				&.active + .title{
					border-top-left-radius:@6px;
					border-top-right-radius:@6px;
					box-shadow:@allSideShadow;
				}
			}
			&.active{
				border-bottom-right-radius:@6px;
				border-bottom-left-radius:@6px;
				&:before{
					content:"";
					width:6px;
					position:absolute;
					left:0;
					top:0;
					bottom:0;
					background-color:@primary-one;
				}
			}
		}
		.list a.item{
			color:@fullBlack;
			&:hover, &:focus, &.active{
				color:@link-color;
			}
		}
	}
}
