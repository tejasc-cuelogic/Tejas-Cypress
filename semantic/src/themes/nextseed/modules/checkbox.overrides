/*******************************
         Theme Overrides
*******************************/

@font-face {
  font-family: 'Checkbox';
  src:
    url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype')
  ;
}

/* Checkmark */
.ui.checkbox label:after,
.ui.checkbox .box:after {
	font-family: 'nextseed';
}

/* Checked */
.ui.checkbox input:checked ~ .box:after,
.ui.checkbox input:checked ~ label:after {
	content: '\e96a';
}

/* Indeterminate */
.ui.checkbox input:indeterminate ~ .box:after,
.ui.checkbox input:indeterminate ~ label:after {
	font-size: 12px;
	content: '\e801';
}

/* Disabled */
.ui.disabled.checkbox {
    pointer-events: none;
}

/*  UTF Reference
.check:before { content: '\e800'; }
.dash:before  { content: '\e801'; }
.plus:before { content: '\e802'; }
*/

//  NextSeed V-2 

//  Button style radio buttons
.ui.form{
	.inline.fields.button-radio{
		flex-wrap:wrap;
		.field{
			padding-top:@relative14px;
			@media only screen and (max-width : @largestMobileScreen){
				width: 50%;
			}
		}
		&.wide{
			margin:0 -@relative14px;
			.field{
				padding-left:@relative14px;
				padding-right:@relative14px;
				.ui.radio.checkbox{
					width:100%;
				}
			}
		}
		&.mobile-radio-button {
			.field {
				@media only screen and (max-width : @largestMobileScreen){
					margin-bottom: @10px !important;
				}
			}
		}
	}
}
.button-radio, .button-checkbox{
	.ui.radio.checkbox, .ui.checkbox{
		margin:0 @10px @10px 0;
		&:last-of-type{
			margin-right:0;
		}
		label{
			height:52px;
			min-width:160px;
			padding:15px;
			text-align:center;
			font-weight:@fontMedium;
			border:@border-color 1px solid;
			border-radius:@6px;
			&:before, &:after{
				display:none;
			}
		}
		input[type="radio"], input[type="checkbox"]{
			width:100%;
			height:100%;
		}
		input:checked ~ label{
			background-color:@primary-one;
			border-color:@primary-one;
			color:@white;
		}
	}
}

.iconic-checkbox, .iconic-radio{
	width:~"calc(100% + 14px)";
	margin:-@7px;
	display:inline-block;
	.ui.checkbox, .ui.radio.checkbox{
		margin:@7px;
		width:18%;
		height:120px;
		display:table;
		float:left;
		@media only screen and (max-width:@largestMobileScreen){
			width:~"calc(50% - 14px)";
		}
		>label{
			padding:0 @20px;
			display:table-cell;
			text-align:center;
			vertical-align:middle;
			font-size:13px;
			font-weight:700;
			border-radius:@6px;
			border:@border-light 1px solid;
			&:before, &:after{
				display:none;
			}
			>.icon:not(.help){
				font-size:46px;
				color:@border-color;
				height:1em;
				width:1em;
				line-height:1;
				margin:0 auto @5px;
				display:block;
			}
		}
		input[type="checkbox"], input[type="radio"]{
			width:100%;
			height:100%;
		}
		input:checked ~ label{
			border-color:@primary-one;
			>.icon:not(.help){
				color:@primary-one;
			}
		}
	}
}

.collapsed-checkbox{
	h4.ui.header{
		font-size:@18px;
		.sub.header{
			margin-top:@4px;
		}
	}
	.ui.checkbox .box, .ui.checkbox label{
		&:before, &:after{
			top:3px;
		}
	}
	.checkbox-description{
		max-height:0;
		overflow:hidden;
		transition:all .5s ease-in-out;
	}
	.checked + .checkbox-description{
		max-height:400px;
		padding-top:@20px;
	}
}
