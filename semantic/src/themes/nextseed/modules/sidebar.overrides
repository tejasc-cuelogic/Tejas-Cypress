			margin-bottom:@3px;
			&:first-of-type{
				margin-bottom:@30px;
			}
			&:first-child:before, &:before{
				display:none;
				background:none;
			}
			>.icon:not(.dropdown){
				float:left;
				// height:auto;
				// margin:0;
				font-size:@16px;
				line-height:@22px;
				color:@quaternary-text;
				// position:relative;
			}
			span{
				opacity:0;
				display:block;
				line-height:@22px;
				text-overflow: ellipsis;
				white-space: nowrap;
				overflow: hidden;
			}
