/*******************************
         Theme Overrides
*******************************/
//  Public page Starts
.offer-details {
	.offering-side-menu {
        .ui.statistics {
			.statistic {
				>.value, >.label {
					font-size: 13px !important;
					color: @white;
					font-weight: normal;
					text-transform: none;
				}
				>.label {
					font-weight: @bold;
				}
			}
		}
	}
	.offering-wrapper {
		.ui.statistic {
			width: 100%;
			padding: 0;
			text-align: center;
			>.label{
				color:@neutral-middark;
				font-size: @13px;
				font-weight: @bold;
			}
			>.value {
				font-size: @28px !important;
				margin: @20px 0;
				color:@neutral-middark;
				font-weight: @fontMedium;
				text-transform: none;
			}
			p {
				font-size: @12px;
				text-align: center;
				i.help {
					color: @green;
					margin-left: 0;
				}
			}
			.slider {
				-webkit-appearance: none;
				width: 100%;
				height: @7px;
				background: @neutral-darkwhite;
				outline: none;
				opacity: 0.7;
				-webkit-transition: .2s;
				transition: opacity .2s;
				border-radius: 50px;
			}
			.slider:hover {
				opacity: 1;
			}
			.slider::-webkit-slider-thumb {
				-webkit-appearance: none;
				appearance: none;
				width: @25px;
				height: @25px;
				background: @white;
				cursor: pointer;
				border-radius: 50px;
				box-shadow: 0px 1px rgba(0, 0, 0, 0.25);
				border: 1px solid @neutral-darkwhite inset;
			}
			.slider::-moz-range-thumb {
				width: @25px;
				height: @25px;
				background: @white;
				cursor: pointer;
				border-radius: 50px;
			}
		}
	}
}
