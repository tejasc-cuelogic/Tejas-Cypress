/*******************************
         Theme Overrides
*******************************/
.header-wrap{
    .ui.menu{
        height:74px;
        background-color:fade(@neutral, 90%);
        border:none;
        border-radius:0;
        box-shadow:none;
        .menu{
            margin:16px 0;
        }
        .item{
            padding:@3px @18px;
            font-weight:@fontMedium;
            text-transform:uppercase;
            > span{
                padding:0.5em 0;
            }
        }
        &.primary .item{
            color:@white;
            &:hover, &.active{
                color:@primary-one;
                background-color:transparent;
            }
            &.active > span{
                padding-bottom:@2px;
                border-bottom:1px solid @primary-one;
            }
        }
    }
}
.ui.secondary.menu.menu-secondary {
    .item {
        font-family: @fontName;
        font-size: 12px;
        line-height: 14px;
        text-align: center;
        text-transform: uppercase;
        border-bottom: 2px solid transparent;
        border-radius: 0;
        padding: 0px 0 10px;
        margin: 0 1.357143em;
        
        &:hover, &:active, &:focus, &:visited, &.active {
            border-bottom: 2px solid @primary-one;
            background-color: transparent;
        }
    }

}
.footer-head{
    .ui.menu{
        &.inverted{
            background-color:transparent;
            .right.menu .item{
                padding:@13px @7px;
            }
        }
        .item > .icon{
            margin:0;
        }
        >.item, a.item{
            min-width:120px;
            padding:@13px 0;
            &:hover{
                background-color:transparent;
            }
        }
    }
}
footer{
    section{
        .ui.vertical.text.menu{
            width:120px;
            margin:0;
            padding:0 @15px 0 0;
            flex-direction:row;
            display:inline-block;
            .item{
                margin:0;
            }
        }
    }
}

.filter-menu {
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    .ui.text.menu {
        margin: 0;
        .item {
            font-weight: @fontMedium;
            font-size: @14px;
            line-height: @20px;
            .ui.image.filterIcon {
                margin-right: 10px;
            }
            .ui.image.closeIcon {
                margin-left: 117px;
            }
        }
    }
}
