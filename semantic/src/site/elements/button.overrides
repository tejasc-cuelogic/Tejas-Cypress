//  Buttons style CSS
.ui{
    &.button, &.buttons .button{
        font-weight:500;
        letter-spacing:1px;
        text-transform:uppercase;
        &.rounded{
            border-radius:20px;
        }
        &.green{
            background-color:@theme-primary;
            &:hover, &:focus, &:active{
                background-color:darken(@theme-primary, 8%);
            }
        }
    }
}